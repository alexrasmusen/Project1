<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="vboxBackground" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.okcu.teamalpha.project1.ImageController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <Label fx:id="lblWelcomeText" text="Welcome! Please select an image to load">
      <font>
         <Font name="Century Gothic" size="17.0" />
      </font>
   </Label>
   <Button fx:id="bttnLoadImage" mnemonicParsing="false" onAction="#onLoadImageClick" prefHeight="26.0" prefWidth="207.0" text="Load Image" />
   <ImageView fx:id="imgPicture" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 20, 0, 0, 0)"/>
   <Label text="Transformation">
      <font>
         <Font name="Century Gothic" size="14.0" />
      </font>
   </Label>
   <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 50; -fx-padding: -10">
      <children>
         <ChoiceBox fx:id="choiceTransformation" prefWidth="150.0" />
         <Button fx:id="bttnApply" mnemonicParsing="false" onAction="#onButtonApplyClicked" text="Apply" />
      </children>
   </HBox>
</VBox>
